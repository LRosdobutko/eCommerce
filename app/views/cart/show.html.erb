<h1>Your Cart</h1>

<% if @cart_books.any? %>
  <ul>
    <% @cart_books.each do |book| %>
      <li>
        <%= book.title %> - $<%= '%.2f' % (book.price_cents / 100.0) %>
        <%= link_to 'Remove', cart_path(book.id), method: :delete, data: { turbo_method: :delete } %>
        <%= link_to 'Add One More', cart_path(book.id), method: :post, data: { turbo_method: :post } %>
      </li>
    <% end %>
  </ul>

  <h2>Total Price: $<%= '%.2f' % (@total_price_cents / 100.0) %></h2>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
